APP="moola"

BUILD_HOST="moola-dev.zxxy.xyz"
BUILD_USER="phil"
BUILD_AT="/home/phil/app_build"

PRODUCTION_HOSTS="moola-prod.zxxy.xyz" 
PRODUCTION_USER="phil" 
DELIVER_TO="/home/phil/app_release"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/phil/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}